          <div class="slider-inner">
            <div class="slider-item"><%= image_tag "/halloween.JPG" %></div>
            <div class="slider-item"><%= image_tag "/sweet.JPG" %></div>
            <div class="slider-item"><%= image_tag "/balloon.JPG" %></div>
            <div class="slider-item"><%= image_tag "/christmas.JPG" %></div>
            <div class="slider-item"><%= image_tag "/sneeze.JPG" %></div>
          </div>
